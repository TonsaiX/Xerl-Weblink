# =====================================================
# Web (Vite / React)
# =====================================================

# Base URL ของ API
VITE_API_BASE=http://localhost:8080

# =====================================================
# Profile
# =====================================================

# ชื่อด้านบนของหน้า (เช่น @yourname)
VITE_PROFILE_HANDLE=@YOUR.NAME

# คำอธิบายใต้ชื่อ
VITE_PROFILE_BIO=รวมลิ้งก์ที่จำเป็นทั้งหมดไว้ที่เดียว

# =====================================================
# Background Image
# =====================================================

# URL รูปพื้นหลัง (Unsplash / CDN / public/bg.jpg)
VITE_BG_IMAGE_URL=https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?q=80&w=1920&auto=format&fit=crop

# ความจางของรูปพื้นหลัง (0.00 - 1.00)
VITE_BG_IMAGE_OPACITY=0.12

# =====================================================
# Theme (Orange)
# =====================================================

# Hue สีส้ม (0-360) ปกติส้มสวยจะอยู่ ~25-35
VITE_ORANGE_HUE=28

# ความแรงของ glow (0.0 - 1.0)
VITE_GLOW_INTENSITY=0.65

# =====================================================
# Motion / Animation
# =====================================================

# ความแรง motion รวม (0.5 - 2.0)
VITE_MOTION_INTENSITY=1.35

# ความเร็ว motion (0.6 - 2.0)
VITE_MOTION_SPEED=1.15
